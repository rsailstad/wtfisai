<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @content.title %></h1>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            Part of: <%= link_to @content.section.title, section_path(@content.section), class: "text-indigo-600 hover:text-indigo-500" %>
          </p>
        </div>
        <div>
          <% if @content_progress.status == 'completed' %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Completed
            </span>
          <% else %>
            <%= button_to "Mark as Complete", complete_content_path(@content), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200">
      <div class="px-4 py-5 sm:p-6 prose max-w-none">
        <%= @content.body %>
      </div>
    </div>
    <div class="px-4 py-4 sm:px-6 border-t border-gray-200">
      <div class="flex justify-between">
        <div>
          <% if @content.previous_content %>
            <%= link_to content_path(@content.previous_content.slug), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
              Previous: <%= @content.previous_content.title %>
            <% end %>
          <% end %>
        </div>
        <div>
          <% if @content.next_content %>
            <%= link_to content_path(@content.next_content.slug), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
              <%= @content.next_content.title %>
              <svg class="ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 