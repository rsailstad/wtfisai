<div class="bg-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Learning Paths
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Choose your path to understanding AI
      </p>
    </div>

    <div class="mt-12 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <% @sections.each do |section| %>
        <div class="bg-white overflow-hidden shadow rounded-lg divide-y divide-gray-200">
          <div class="px-6 py-5">
            <div class="flex items-center justify-between">
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                <%= section.title %>
              </h3>
              <% if section.premium? %>
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                  Premium
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  Free
                </span>
              <% end %>
            </div>
            <p class="mt-3 text-base text-gray-500">
              <%= section.description %>
            </p>
          </div>
          <div class="px-6 py-4 bg-gray-50">
            <%= link_to section_path(section.slug), class: "text-base font-medium text-indigo-600 hover:text-indigo-500" do %>
              Start Learning <span aria-hidden="true">&rarr;</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 