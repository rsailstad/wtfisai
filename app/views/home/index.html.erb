<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
      <span class="block">WTF is AI?</span>
      <span class="block text-indigo-600">Let's find out together</span>
    </h1>
    <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
      Your comprehensive guide to understanding artificial intelligence, from basics to business applications.
    </p>
    <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
      <div class="rounded-md shadow">
        <%= link_to "Get Started", sections_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10" %>
      </div>
      <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
        <%= link_to "Subscribe", new_subscription_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10" %>
      </div>
    </div>
  </div>

  <div class="mt-12">
    <h2 class="text-3xl font-bold text-gray-900">Featured Content</h2>
    <div class="mt-6 grid gap-6 lg:grid-cols-3">
      <% @featured_content.each do |content| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900"><%= content.title %></h3>
            <p class="mt-2 text-sm text-gray-500"><%= strip_tags(content.body&.to_plain_text.to_s).truncate(150) %></p>
            <div class="mt-4">
              <%= link_to "Read More", content_path(content.slug), class: "text-indigo-600 hover:text-indigo-500" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-12">
    <h2 class="text-3xl font-bold text-gray-900">Learning Paths</h2>
    <div class="mt-6 grid gap-6 lg:grid-cols-4">
      <% @sections.each do |section| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium text-gray-900"><%= section.title %></h3>
            <p class="mt-2 text-sm text-gray-500"><%= section.description %></p>
            <div class="mt-4">
              <%= link_to "Explore", section_path(section.slug), class: "text-indigo-600 hover:text-indigo-500" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Hero Section -->
<div class="relative bg-indigo-600">
  <div class="mx-auto max-w-7xl py-3 px-3 sm:px-6 lg:px-8">
    <div class="pr-16 sm:px-16 sm:text-center">
      <p class="font-medium text-white">
        <span class="md:hidden">Welcome to WTFISAI!</span>
        <span class="hidden md:inline">Welcome to WTFISAI - Your Journey into Understanding Artificial Intelligence</span>
      </p>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="bg-gray-50">
  <div class="mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        Start Learning Today
      </h2>
      <p class="mx-auto mt-3 max-w-2xl text-xl text-gray-500 sm:mt-4">
        Dive into our free content and begin your AI learning journey
      </p>
    </div>

    <div class="mt-10">
      <div class="grid gap-5 max-w-lg mx-auto lg:grid-cols-3 lg:max-w-none">
        <% @latest_free_contents.each do |content| %>
          <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
              <div class="flex-1">
                <p class="text-sm font-medium text-indigo-600">
                  <%= content.section.title %>
                </p>
                <div class="mt-2">
                  <h3 class="text-xl font-semibold text-gray-900">
                    <%= content.title %>
                  </h3>
                  <div class="mt-3 text-base text-gray-500">
                    <%= strip_tags(content.body&.to_plain_text.to_s).truncate(150) %>
                  </div>
                </div>
              </div>
              <div class="mt-6">
                <%= link_to "Read More", content_path(content.slug), class: "text-base font-semibold text-indigo-600 hover:text-indigo-500" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-10 text-center">
      <%= link_to "View All Learning Paths", sections_path, class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
</div>
